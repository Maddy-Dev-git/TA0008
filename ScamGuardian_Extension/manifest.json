{
  "manifest_version": 3,
  "name": "AI Scam Guardian",
  "version": "1.0",
  "description": "Real-time AI protection against phishing and social engineering.",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["style.css"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}